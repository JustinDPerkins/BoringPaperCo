# GCP Project Configuration
project_id = "your-gcp-project-id"
region     = "us-central1"
zone       = "us-central1-a"

# GKE Cluster Configuration
cluster_name        = "boringpaperco-gcp"
node_count          = 3
node_machine_type   = "e2-standard-4"  # 4 vCPUs, 16 GB RAM
disk_size           = 20

# Artifact Registry Repositories (container images)
artifact_registry_repositories = [
  "aichat",
  "containerxdr", 
  "ui",
  "sdk",
  "ollama"
] 